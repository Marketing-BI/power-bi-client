{
  "compilerOptions": {
    "target": "es6",
    "module": "node16",
    "moduleResolution": "node16",
    "rootDirs": [
      "./src"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*"
  ]
}