{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "exclude": [
    "node_modules", "dist", "src/**/*.spec.ts", "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
